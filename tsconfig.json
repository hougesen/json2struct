{
    "compilerOptions": {
        "allowJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "removeComments": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "es2021"
    },
    "include": ["src/**/*", "src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
}
